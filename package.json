{
  "name": "root",
  "version": "1.0.0",
  "description": "API Template project",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-lambda/api-template"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "prod": "npm run prod -workspace api-template",
    "start": "npm start -workspace api-template",
    "watch": "npm run watch -workspace api-template",
    "build": "npm run build -workspaces --if-present",
    "clean": "npm run clean -workspaces --if-present",
    "test": "npm run test -workspaces --if-present -- --passWithNoTests",
    "lint": "npm run lint -workspaces --if-present",
    "license:check": "npx license-checker-rseidelsohn --production --excludePrivatePackages --onlyAllow 'MIT;ISC;0BSD;BSD-2-Clause;BSD-3-Clause;CC-BY-3.0;CC0-1.0;Apache-2.0;Python-2.0' --summary",
    "license:report": "license-checker --production --excludePrivatePackages --relativeLicensePath --json --out licenses.json"
  },
  "author": "Draltan MARIN <moi@draltan.com>",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "2.8.8",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
  },
  "workspaces": [
    "packages/api",
    "packages/doc",
    "packages/dto",
    "packages/sdk"
  ]
}
