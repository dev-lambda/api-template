{
  "name": "root",
  "version": "1.0.0",
  "description": "API Template project",
  "repository": {
    "type": "git",
    "url": "https://github.com/dev-lambda/api-template"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "prod": "npm run prod -workspace api-template",
    "start": "npm start -workspace api-template",
    "watch": "npm run watch -workspace api-template",
    "doc": "npm run dumpApiSpec -w api-template && npm start -workspace api-template-doc",
    "build": "npm run build -workspaces --if-present",
    "clean": "npm run clean -workspaces --if-present",
    "test": "npm run test -workspaces --if-present -- --passWithNoTests",
    "lint": "npm run lint -workspaces --if-present",
    "prettier": "prettier"
  },
  "author": "Draltan MARIN <moi@draltan.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "2.8.8",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
